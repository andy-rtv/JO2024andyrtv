@model JO2024andyrtv.Models.Offre

@{
    ViewData["Title"] = "Modifier l'offre";
}
<div class="container">
<h1>Modifier l'offre</h1>

<h4>Offre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOffer">
            <div class="form-group">
                <input type="hidden" asp-for="Id_Offre" />
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pourcentage" class="control-label"></label>
                <input asp-for="Pourcentage" class="form-control" />
                <span asp-validation-for="Pourcentage" class="text-danger"></span>
            </div>
                <div class="form-group mb-3">
                <label asp-for="NbPersonne" class="control-label"></label>
                <input asp-for="NbPersonne" class="form-control" />
                <span asp-validation-for="NbPersonne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AdminDashboard">Retour à la liste</a>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
