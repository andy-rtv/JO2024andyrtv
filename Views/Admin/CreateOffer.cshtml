@model JO2024andyrtv.Models.Offre

@{
    ViewData["Title"] = "Créer une offre";
}
<div class="container">
<h1>Créer une offre</h1>

<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="CreateOffer" method="post">
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pourcentage" class="control-label"></label>
        <input asp-for="Pourcentage" class="form-control" />
        <span asp-validation-for="Pourcentage" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="NbPersonne" class="control-label"></label>
        <input asp-for="NbPersonne" class="form-control" />
        <span asp-validation-for="NbPersonne" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Créer" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="AdminDashboard">Retour à la liste</a>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
