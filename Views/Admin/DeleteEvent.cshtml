@model Evenement
@{
    ViewData["Title"] = "Delete Event";
}
<div class="container">
<h1>Delete Event</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Sport Name
        </dt>
        <dd class="col-sm-10">
            @Model.SportName
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Date Debut
        </dt>
        <dd class="col-sm-10">
            @Model.DateDebut
        </dd>
        <dt class="col-sm-2">
            Date Fin
        </dt>
        <dd class="col-sm-10">
            @Model.DateFin
        </dd>
    </dl>

    <form asp-action="DeleteEvent">
        <input type="hidden" asp-for="Id_Evenement" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="AdminDashboard" class="btn btn-secondary">Back to List</a>
    </form>
</div>
</div>