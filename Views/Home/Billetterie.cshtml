@model IEnumerable<JO2024andyrtv.Models.Evenement>
@{
    ViewData["Title"] = "Billetterie";
}
<style>
    .card-img-top {
        height: 200px;
        object-fit: cover;
        width: 100%;
    }
</style>
<!-- Background image -->
<div class="text-center bg-image" style="
background-image: url('/uploads/img/banner2004.jpg');
background-repeat: no-repeat;
background-size: cover;
background-position: center;
width: 100%;
height: 780px;
">
    <div class="d-flex justify-content-between p-3">
        <div>
            <img src="/uploads/img/doubleP24_logo.png" class="img-fluid" alt="Description de votre image" style="height: 100px; width: auto;" />
        </div>
        <div>
            <img src="/uploads/img/Paris2024_ParaOLY_Visa_fr.png" class="img-fluid" alt="Description de votre image" style="height: 100px; width: auto;" />
        </div>
    </div>

    <div class="container h-100 text-start">
        <div class="row align-items-center">
            <div class="text-white">
                <h1 class="display-1 mb-4">BILLETTERIE OFFICIELLE DES JEUX DE PARIS 2024</h1>
                <p class="display-6">Bienvenue sur la billetterie officielle des Jeux Olympiques et Paralympiques de Paris 2024 ! Pour vous connecter à votre compte ou en créer un, cliquez ci-dessous sur "Je me connecte".</p>
                <a class="btn btn-light btn-lg" href="#Billetterie" role="button">Réservez maintenant</a>
            </div>
        </div>
    </div>
</div>
<!-- Background image -->
<!--advertisements offers-->
<div class="container-fluid" style="background-repeat: no-repeat; background-size: cover; background-position: center; width: 100%; margin-bottom: 20px;">
    <div class="accordion accordion-flush" id="accordionFlushExample">
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                    <h3>Offres à durée limitée, profitez-en ! (prends fin le : 20/05/24 10h00)</h3>
                </button>
            </h2>
            <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                <header>
                    <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
                        <h1 class="display-4 fw-normal text-body-emphasis source-sans">Nos offres</h1>
                        <p class="fs-5 text-body-secondary">Profitez de nos offres exceptionnelles sur les billets pour les Jeux Olympiques et Paralympiques de Paris 2024 !</p>
                    </div>
                </header>

                <main class="p-2">
                    <div class="row row-cols-1 row-cols-md-3 text-center">
                        <div class="col">
                            <div class="card rounded-3 shadow-sm">
                                <div class="card-header py-3">
                                    <h4 class="my-0 fw-normal">SOLO</h4>
                                </div>
                                <div class="card-body">
                                    <h1 class="card-title pricing-card-title">-8%</h1>
                                    <ul class="list-unstyled mt-3 mb-4">
                                        <li>Accès pour 1 personne</li>
                                        <li>Places limitées</li>
                                    </ul>
                                    <button type="button" class="w-100 btn btn-lg btn-outline-dark">Réserver maintenant</button>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card rounded-3 shadow-sm">
                                <div class="card-header py-3">
                                    <h4 class="my-0 fw-normal">DUO</h4>
                                </div>
                                <div class="card-body">
                                    <h1 class="card-title pricing-card-title">-12%</h1>
                                    <ul class="list-unstyled mt-3 mb-4">
                                        <li>Accès pour 2 personnes</li>
                                        <li>Places limitées</li>
                                    </ul>
                                    <button type="button" class="w-100 btn btn-lg btn-dark">Réserver maintenant</button>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card rounded-3 shadow-sm border-dark">
                                <div class="card-header py-3 text-bg-primary border-dark">
                                    <h4 class="my-0 fw-normal">FAMILIALE</h4>
                                </div>
                                <div class="card-body">
                                    <h1 class="card-title pricing-card-title">-20%</h1>
                                    <ul class="list-unstyled mt-3 mb-4">
                                        <li>Accès pour 4 personnes</li>
                                        <li>Places limitées</li>
                                    </ul>
                                    <button type="button" class="w-100 btn btn-lg btn-dark">Réserver maintenant</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>
</div>
<hr />
<!--Gallerie d'Evenements-->
<section id="Billetterie">
<div class="container mt-4">
    <h1 class="text-center">Billetterie</h1>
    <div class="accordion" id="accordionFilter">
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <h4>Filtrer</h4>
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFilter">
                <div class="accordion-body">
                    <form method="get" asp-action="Billetterie">
                        <div class="row mb-3">
                            <div class="col-md-3">
                                <label for="searchString">Recherche par sport :</label>
                                <input type="text" name="searchString" class="form-control" placeholder="Recherche par sport" value="@ViewData["CurrentFilter"]" />
                            </div>
                            <div class="col-md-2">
                                <label for="genre">Genre :</label>
                                <select name="genre" class="form-control">
                                    <option value="">Tous les genres</option>
                                    <option value="0">Homme</option>
                                    <option value="1">Femme</option>
                                    <option value="2">Mixte</option>
                                </select>
                            </div>
                           
                            <div class="col-md-3">
                                <label for="typeEpreuve">Type d'épreuve :</label>
                                <select name="typeEpreuve" class="form-control">
                                    <option value="">Tous les types</option>
                                    <option value="0">Olympique</option>
                                    <option value="1">Paralympique</option>
                                </select>
                            </div>

                            <div class="col-md-2">
                                <label for="minPrice">Prix min :</label>
                                <input type="number" name="minPrice" class="form-control" placeholder="Prix minimum" value="@ViewData["MinPriceFilter"]" />
                            </div>
                            <div class="col-md-2">
                                <label for="maxPrice">Prix max :</label>
                                <input type="number" name="maxPrice" class="form-control" placeholder="Prix maximum" value="@ViewData["MaxPriceFilter"]" />
                            </div>
                            <div class="col-md-3">
                                <label for="startDate">Date min :</label>
                                <input type="date" name="startDate" class="form-control" value="@ViewData["StartDateFilter"]" />
                            </div>
                            <div class="col-md-3">
                                <label for="endDate">Date max :</label>
                                <input type="date" name="endDate" class="form-control" value="@ViewData["EndDateFilter"]" />
                            </div>
                            
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <button type="submit" class="btn btn-primary" id="filterButton">Filtrer</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row" id="eventsContainer">
        @await Html.PartialAsync("_EventCardsPartial", Model)
    </div>
</div>
</section>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    
}
